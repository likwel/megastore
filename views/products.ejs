        <script>
            function readImagesURL(input) {
                if (!input.files) {
                    return;
                }
                const readers = [];
                const bean = document.getElementById('gallery-image-bean');

                for (let i = 0; i < input.files.length; i++) {
                    readers.push(new FileReader());
                    readers[i].onload = function(e) {

                    let div_ = document.createElement('div');
                    div_.classList = "profile-image-small fmxw-100 me-3 mb-3"
                    
                    const img = new Image();
                    img.src = e.target.result;
                    
                    img.classList ="rounded"
                    img.style = "max-width:100%;"
                    
                    div_.appendChild(img)

                        // bean.appendChild(img);
                    bean.appendChild(div_);
                    };
                    readers[i].readAsDataURL(input.files[i]);
                }
            }

            function readOneImageURL(input) {
            if (!input.files) {
                return;
            }
            const readers = [];
            const bean = document.getElementById('featured-image-bean');
            // bean.innerHTML =""

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                const img = new Image();
                img.src = e.target.result;
                
                img.classList ="rounded"
                img.style = "max-width:100%;"

                bean.src=e.target.result
                
                // bean.appendChild(img);

                };
                reader.readAsDataURL(input.files[0]);
            }

            }

            

        </script>
